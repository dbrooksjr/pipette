{
    "schemaVersion": 1,
    "id": "pipette",
    "version": "${version}",

    "name": "Pipette",
    "description": "Pipette adds a set of simple changes to Minecraft that allow for significant improvements to automation and QOL, while maintaining the vanilla Minecraft feel we all hold so dear.",
    "authors": [
        "octalide"
    ],
    "contact": {
        "homepage": "https://github.com/octalide/pipette",
        "sources": "https://github.com/octalide/pipette"
    },

    "license": "CC0-1.0",
    "icon": "assets/pipette/icon.png",

    "environment": "*",
    "entrypoints": {
        "main": [
            "dev.octalide.pipette.Pipette"
        ],
        "client": [
            "dev.octalide.pipette.PipetteClient"
        ]
    },
    "mixins": [
    ],

    "depends": {
        "fabricloader": ">=0.7.4",
        "fabric": "*",
        "minecraft": "1.16.x"
    },
    "suggests": {
        "another-mod": "*"
    }
}
